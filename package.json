{
  "name": "electron-helloworld",
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "run-server": "http-server release/installer -p 8060",
    "pack:win": "electron-packager . --platform=win32 --arch=x64 --out=release/package",
    "build:winstaller": "node ./build.js",
    "zip:win": "bestzip release/installer/electron-helloworld-win.zip ./release/installer/Setup.exe",
    "build:win": "npm run pack:win && npm run build:winstaller"
  },
  "devDependencies": {
    "bestzip": "^2.1.4",
    "electron": "^6.0.6",
    "electron-packager": "^14.0.5",
    "electron-winstaller": "^4.0.0",
    "http-server": "^0.11.1"
  },
  "dependencies": {
    "electron-log": "^3.0.7"
  }
}
